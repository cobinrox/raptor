<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>raptor</artifactId>
    <groupId>com.cobinrox</groupId>
    <version>1</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.cobinrox</groupId>
  <artifactId>io</artifactId>
  <name>io</name>
  <version>1</version>
  <url>http://maven.apache.org</url>
  <build>
    <resources>
      <resource>
        <targetPath>${project.build.directory}</targetPath>
        <directory>src/main/resources</directory>
        <includes>
          <include>io.properties</include>
          <include>log4j.xml</include>
        </includes>
      </resource>
    </resources>
    <finalName>rap_io</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.cobinrox.io.DoMotorCmd</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>locallib</id>
      <url>file://${project.basedir}/../mylib</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>javax.servlet-api</artifactId>
      <version>3.0.1</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <properties>
    <pi4j.version>0.0.5</pi4j.version>
    <assembly-plugin.version>2.4</assembly-plugin.version>
    <compiler-plugin.version>3.1</compiler-plugin.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
</project>

